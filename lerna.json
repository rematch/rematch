{
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "version": {
      "message": "chore(release): released new version [skip ci]",
      "ignoreChanges": [
        "**/CHANGELOG.md",
        "**/examples/*",
        "**/node_modules/**",
        "**/package.json",
        "**/*.md"
      ]
    },
    "publish": {
      "allowBranch": [
        "main",
        "master",
        "next"
      ],
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "**/CHANGELOG.md",
        "**/examples/*",
        "**/node_modules/**",
        "**/package.json",
        "**/*.md"
      ]
    }
  }
}
