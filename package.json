{
  "name": "@rematch/core",
  "version": "0.1.0-beta.2",
  "description": "A Redux Framework",
  "keywords": [
    "@rematch",
    "redux",
    "rematch"
  ],
  "homepage": "https://github.com/rematch/rematch#readme",
  "bugs": {
    "url": "git+https://github.com/rematch/rematch/issues"
  },
  "license": "ISC",
  "contributors": [
    "Blair Bodnar <blairbodnar@gmail.com> (https://github.com/blairbodnar)",
    "Shawn McKay <shawn.j.mckay@gmail.com> (https://github.com/shmck)"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.min.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rematch/rematch.git"
  },
  "scripts": {
    "build": "webpack --env build",
    "build:all": "bash ./scripts/build.sh",
    "dev": "webpack --progress --colors --watch --env dev",
    "install:all": "bash ./scripts/install.sh",
    "lint": "eslint ./src",
    "test": "jest"
  },
  "dependencies": {
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.8.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "flow-bin": "^0.59.0",
    "gitbook-plugin-edit-link": "^2.0.2",
    "gitbook-plugin-github": "^3.0.0",
    "gitbook-plugin-prism": "^2.3.0",
    "jest": "^21.2.1",
    "reselect": "^3.0.1",
    "webpack": "^3.8.1",
    "yargs": "^10.0.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": ".coverage/",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/_book/",
      "/node_modules/",
      "/plugins/react-navigation/"
    ],
    "testPathIgnorePatterns": [
      "/_book/"
    ]
  }
}
